rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /contracts/{document=**} {
      allow create: if request.auth != null;
      allow read, delete: if request.auth.uid == resource.data.uid
    }
    match /clients/{document=**} {
      allow create: if request.auth != null;
      allow read, delete: if request.auth.uid == resource.data.uid
    }
  }
}
